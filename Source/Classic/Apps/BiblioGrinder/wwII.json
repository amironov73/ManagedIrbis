{
  // ================================================================
  // Обратите внимание: свойство $type должно быть первым среди
  // свойств объекта!
  // ================================================================

  "mainTitle": "Великая Отечественная Война 1941-1945",
  "copyright": "А. В. Миронов (c) 2024",

  // ================================================================

  // Настройки, общие для всего указателя в целом
  // и для глав в частности (берутся по умолчанию,
  // если не определены в самой главе).
  "common": {
    // Нумерация записей - сплошная
    "numbering": "continuous",

    "pageAttributes": {
      // Атрибуты страниц
    },
    "titleAttributes": {
      // Атрибуты заголовка по умолчанию
    },
    "recordAttributes": {
      // Атрибуты записи по умолчанию
    },
    "removeTags": [
        10, 11, 320, 488, 517, 470
    ],
    "showOrder" : false
  },

  // ================================================================

  // Главы указателя
  "chapters": [
    {
      // Всего записей, затрачено времени, распределение по разделам
      "$type": "ChapterWithStatistics",
      "title": "Статистика",
      "active": true // Можно выключить, если больше не нужно
    },
    {
      // Ошибки в библиографическом описании
      "$type": "ChapterWithErrors",
      "title": "Ошибки и предупреждения",
      "attr": {
        "pageBreak": true
      },
      "active": false // Можно выключить, если больше не нужно
    },
    //{
    //  "$type": "ChapterWithText",
    //  "title": "Предисловие от составителей",
    //  "attr": {
    //    "pageBreak": true
    //  },
    //  "text": "*foreword.txt",
    //  "active": false
    //},

    // ==============================================================
    // Собственно указатель
    // ==============================================================

    {
      "$type": "MenuChapter",
      "title": "Библиографический указатель",

      // Выражение для отбора записей
      "search": "'DBWEB=VOVSTN * (G=194107$ + G=194108$ + G=194109$ + G=194110$ + G=194111$ + G=194112$ + G=19410622 + G=19410623 + G=19410624 + G=19410625 + G=19410626 + G=19410627 + G=19410628 + G=19410629 + G=1941063$)'",
      // "search": "'DBWEB=VOVSTN * (G=194501$ + G=194502$ + G=194503$ + G=194504$ + G=194505$ + G=194506$ + G=194507$ + G=194508$ + G=194509$)'",
      // "search": "'DBWEB=VOVSTN * G=1944'",

      // Формат библиографического описания для записи
      "format": "@rasputin",

      // Сортировка описаний внутри главы
      "orderBy": "v931^!,| |v700^a,| |v710^a,| |v200^a,",

      // Имя файла меню
      "menuName": "ii.mnu",

      // Отбор записей
      "recordSelector": "(v690^l,/)",

      // Формат заголовка
      "titleFormat": "v1, '. ', v2",

      // Только листья могут содержать записи
      "leafOnly": false,

      // украшать записи?
      "beautifyRecords": true,

      // исправлять даты?
      "fixDates": false,

      // исправлять сортировку?
      "trimOrder": false,

      "attr": {
        "pageBreak": false
      }
    },

    // ==============================================================
    // Справочный аппарат
    // ==============================================================

    {
      "$type": "ChapterWithText",
      "title": "Справочный аппарат",
      "text": "",
      "children": [
        {
          "$type": "ChapterWithDictionary",
          "title": "Указатель авторов",
          "attr": {
            "pageBreak": true
          },
          "select": "*authors.pft",
          "extended": "*authors_extended.pft",
          "orderBy": "*authors.pft",
          "active": true
        },
        {
          "$type": "ChapterWithDictionary",
          "title": "Алфавитный указатель произведений",
          "attr": {
            "pageBreak": true
          },
          "select": "*titles.pft",
          "orderBy": "*titles.pft",
          "active": true
        },
        {
          "$type": "ChapterWithDictionary",
          "title": "Коллективы и мероприятия",
          "attr": {
            "pageBreak": true
          },
          "select": "*athrk.pft",
          "orderBy": "*athrk.pft"
        },
        {
          "$type": "ChapterWithDictionary",
          "title": "Предметные заголовки",
          "attr": {
            "pageBreak": true
          },
          "select": "*athrt.pft",
          "orderBy": "*athrt.pft",
          "active": true
        },
        {
          "$type": "ChapterWithDictionary",
          "title": "Персоналии",
          "attr": {
            "pageBreak": true
          },
          "select": "*athra.pft",
          "orderBy": "*athra.pft",
          "active": true
        },
        {
          "$type": "ChapterWithDictionary",
          "title": "Родовые имена",
          "attr": {
            "pageBreak": true
          },
          "select": "*athrr.pft",
          "orderBy": "*athrr.pft",
          "active": false
        },
        {
          "$type": "ChapterWithDictionary",
          "title": "Географические объекты",
          "attr": {
            "pageBreak": true
          },
          "select": "*athrg.pft",
          "orderBy": "*athrg.pft",
          "active": true
        }
      ]
    }
  ]
}
