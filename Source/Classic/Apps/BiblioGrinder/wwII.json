    //  "attr": {
    //    "pageBreak": true
    //  },
    //  "text": "*foreword.txt",
    //  "active": false
    //},

    // ==============================================================
    // Собственно указатель
    // ==============================================================

    {
      "$type": "MenuChapter",
      "title": "Библиографический указатель",

      // Выражение для отбора записей
      "search": "'DBWEB=VOVSTN * G=1941'",

      // Формат библиографического описания для записи
      //"format": "*rasputin.pft",
      "format": "@rasputin",

      // Сортировка описаний внутри главы
      "orderBy": "&uf('+98 0',f(val(v463^h),10,0))",

      // Имя файла меню
      "menuName": "ii.mnu",

      // Отбор записей
      "recordSelector": "(v690^l,/)",

      // Формат заголовка
      "titleFormat": "v1, '. ', v2",

      // Только листья могут содержать записи
      //"leafOnly": true,
      "leafOnly": false,

      "attr": {
        "pageBreak": false
      }
    },

    // ==============================================================
    // Справочный аппарат
    // ==============================================================

    {
      "$type": "ChapterWithText",
      "title": "Справочный аппарат",
      "text": "",
      "children": [
        {
          "$type": "ChapterWithDictionary",
          "title": "Указатель авторов",
          "attr": {
            "pageBreak": true
          },
          "select": "*authors.pft",
          "extended": "*authors_extended.pft",
          "orderBy": "*authors.pft",
          "active": true
        },
        {
          "$type": "ChapterWithDictionary",
          "title": "Алфавитный указатель произведений",
          "attr": {
            "pageBreak": true
          },
          "settings": {
            "chapterFilter": "^1|^Библиографический"
           },
          "select": "*titles.pft",
          "orderBy": "*titles.pft",
          "active": true
        },
        {
          "$type": "ChapterWithDictionary",
          "title": "Указатель коллективов",
          "attr": {
            "pageBreak": true
          },
          "select": "*collectives.pft",
          "orderBy": "*collectives.pft"
        },
        {
          "$type": "ChapterWithDictionary",
          "title": "Предметные рубрики",
          "attr": {
            "pageBreak": true
          },
          "select": "*headings.pft",
          "orderBy": "*headings.pft",
          "active": true
        },
        {
          "$type": "ChapterWithDictionary",
          "title": "Географический указатель",
          "attr": {
            "pageBreak": true
          },
          "select": "*geo.pft",
          "orderBy": "*geo.pft",
          "active": true
        }
      ]
    }
  ]
}
